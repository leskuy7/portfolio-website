<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="<%= meta && meta.description ? meta.description : t('metaDesc') %>">
<meta name="keywords" content="Full Stack Developer, Web Geliştirici, React, Node.js, JavaScript, UI/UX, Yüksel Yılmaz">
<meta name="author" content="Yüksel Yılmaz">
<meta name="robots" content="index, follow">

<!-- Open Graph / Social Media -->
<meta property="og:type" content="website">
<meta property="og:title" content="<%= meta && meta.title ? meta.title : t('metaTitle') %>">
<meta property="og:description" content="<%= meta && meta.description ? meta.description : t('metaDesc') %>">
<meta property="og:url" content="<%= meta && meta.ogUrl ? meta.ogUrl : 'https://yukselyilmaz.com' %>">
<meta property="og:image" content="<%= meta && meta.ogImage ? meta.ogImage : '' %>">

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="<%= meta && meta.title ? meta.title : t('metaTitle') %>">
<meta name="twitter:description" content="<%= meta && meta.description ? meta.description : t('metaDesc') %>">
<meta name="twitter:image" content="<%= meta && meta.ogImage ? meta.ogImage : '' %>">

<title><%= meta && meta.title ? meta.title : t('metaTitle') %></title>

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/images/favicon.svg">

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- AOS Animation Library -->
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

<!-- Custom CSS -->
<link rel="stylesheet" href="/css/style.css">