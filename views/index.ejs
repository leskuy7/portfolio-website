<!DOCTYPE html>
<html lang="<%= lang %>">

<head>
    <%- include('partials/head') %>
</head>

<body>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="loading-overlay">
        <div class="loader"></div>
    </div>

    <!-- Navbar -->
    <%- include('partials/navbar') %>

        <!-- Hero Section -->
        <header id="home" class="hero d-flex align-items-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6" data-aos="fade-right">
                        <h1 class="display-4"><%= t('heroGreeting') %> <br><span
                                class="text-gradient fw-bold"><%= t('heroName') %></span>
                        </h1>
                        <p class="lead"><%= t('heroTitle') %></p>
                        <p class="mb-4"><%= t('heroDesc') %></p>
                        <div class="d-flex-mobile">
                            <a href="#portfolio" class="btn btn-primary btn-primary-custom me-2"><%= t('heroBtn1') %></a>
                            <a href="#contact" class="btn btn-outline-custom"><%= t('heroBtn2') %></a>
                        </div>
                    </div>
                    <div class="col-lg-6 text-center" data-aos="fade-left" data-aos-delay="200">
                        <img src="https://placehold.co/600x400/png?text=Hero+Image" alt="Hero Image"
                            class="img-fluid rounded-3 shadow-lg" loading="lazy">
                    </div>
                </div>
            </div>
        </header>

        <!-- About Section -->
        <section id="about">
            <div class="container">
                <div class="section-title" data-aos="fade-up">
                    <h2><%= t('aboutTitle') %></h2>
                    <p class="text-muted mt-2"><%= t('aboutSubtitle') %></p>
                </div>
                <div class="row align-items-center">
                    <div class="col-lg-5" data-aos="fade-right">
                        <img src="https://placehold.co/500x500/png?text=Profile+Image" alt="Profile"
                            class="img-fluid profile-img mb-4 mb-lg-0" loading="lazy">
                    </div>
                    <div class="col-lg-7 ps-lg-5" data-aos="fade-left">
                        <h3><%= t('aboutHeading') %></h3>
                        <p class="mt-4"><%= t('aboutDesc') %></p>
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check-circle text-primary me-2"></i><%= t('aboutSkill1') %></li>
                                    <li class="mb-2"><i class="fas fa-check-circle text-primary me-2"></i><%= t('aboutSkill2') %></li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check-circle text-primary me-2"></i><%= t('aboutSkill3') %></li>
                                    <li class="mb-2"><i class="fas fa-check-circle text-primary me-2"></i><%= t('aboutSkill4') %></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Skills Section -->
        <section id="skills" class="bg-white">
            <div class="container">
                <div class="section-title" data-aos="fade-up">
                    <h2><%= t('skillsTitle') %></h2>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                        <div class="skill-card">
                            <div class="skill-icon">
                                <i class="fab fa-node-js"></i>
                            </div>
                            <h4><%= t('skillBackend') %></h4>
                            <p class="text-muted"><%= t('skillBackendDesc') %></p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
                        <div class="skill-card">
                            <div class="skill-icon">
                                <i class="fab fa-react"></i>
                            </div>
                            <h4><%= t('skillFrontend') %></h4>
                            <p class="text-muted"><%= t('skillFrontendDesc') %></p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="300">
                        <div class="skill-card">
                            <div class="skill-icon">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <h4><%= t('skillMobile') %></h4>
                            <p class="text-muted"><%= t('skillMobileDesc') %></p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Portfolio Section -->
        <section id="portfolio" style="background-color: var(--light-bg);">
            <div class="container">
                <div class="section-title" data-aos="fade-up">
                    <h2><%= t('portfolioTitle') %></h2>
                    <p class="text-muted mt-2"><%= t('portfolioSubtitle') %></p>
                </div>
                <div class="row">
                    <!-- Project 1 (Market App) -->
                    <div class="col-lg-4 col-md-6 portfolio-item" data-aos="fade-up" data-aos-delay="100">
                        <a href="/project/1" class="text-decoration-none text-reset h-100 d-block">
                            <div class="portfolio-card card h-100">
                                <img src="https://placehold.co/600x400/png?text=Market+Stok+Takip"
                                    class="card-img-top portfolio-img" alt="<%= t('project1Title') %>" loading="lazy">
                                <div class="card-body">
                                    <h5 class="card-title"><%= t('project1Title') %></h5>
                                    <p class="card-text"><%= t('project1Desc') %></p>
                                    <span class="badge bg-primary mt-3">Live Demo</span>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Project 2 (Abonelik App) -->
                    <div class="col-lg-4 col-md-6 portfolio-item" data-aos="fade-up" data-aos-delay="200">
                        <a href="/project/2" class="text-decoration-none text-reset h-100 d-block">
                            <div class="portfolio-card card h-100">
                                <img src="https://placehold.co/600x400/png?text=Abonelik+Takip"
                                    class="card-img-top portfolio-img" alt="<%= t('project2Title') %>" loading="lazy">
                                <div class="card-body">
                                    <h5 class="card-title"><%= t('project2Title') %></h5>
                                    <p class="card-text"><%= t('project2Desc') %></p>
                                    <span class="badge bg-primary mt-3">Live Demo</span>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact">
            <div class="container">
                <div class="section-title" data-aos="fade-up">
                    <h2><%= t('contactTitle') %></h2>
                    <p class="mt-2 text-white-50"><%= t('contactSubtitle') %></p>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8" data-aos="fade-up" data-aos-delay="100">
                        <form id="contact-form" class="contact-form" novalidate>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="text" name="name" class="form-control"
                                        placeholder="<%= t('contactName') %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="email" name="email" class="form-control"
                                        placeholder="<%= t('contactEmail') %>" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="text" name="subject" class="form-control"
                                    placeholder="<%= t('contactSubject') %>" required>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" name="message" rows="5"
                                    placeholder="<%= t('contactMessage') %>" required></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" id="contact-btn" class="btn btn-primary btn-primary-custom px-5">
                                    <i class="fas fa-paper-plane me-2"></i><%= t('contactBtn') %>
                                </button>
                            </div>
                            <div id="contact-alert" class="mt-3" style="display:none;"></div>
                        </form>

                        <div class="social-links text-center mt-5" data-aos="fade-up" data-aos-delay="200">
                            <a href="https://linkedin.com/in/yüksel-yılmaz-7692511b7" target="_blank"
                                class="text-white me-4 fs-4"><i class="fab fa-linkedin"></i></a>
                            <a href="https://github.com/leskuy7" target="_blank" class="text-white me-4 fs-4"><i
                                    class="fab fa-github"></i></a>
                            <a href="https://instagram.com/yksel124" target="_blank" class="text-white fs-4"><i
                                    class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include('partials/footer') %>

</body>

</html>