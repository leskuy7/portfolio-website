<!DOCTYPE html>
<html lang="<%= lang %>">

<head>
    <%- include('partials/head') %>
</head>

<body>

    <!-- Navbar -->
    <%- include('partials/navbar') %>

        <!-- Project Header -->
        <header class="hero d-flex align-items-center" style="min-height: 40vh; padding-top: 100px;">
            <div class="container text-center">
                <h1 class="display-4 fw-bold">
                    <%= project.title %>
                </h1>
                <p class="lead">
                    <%= project.subtitle %>
                </p>
            </div>
        </header>

        <!-- Project Details -->
        <section class="py-5 bg-white">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <img src="<%= project.image %>" alt="<%= project.title %>"
                            class="img-fluid rounded-3 shadow-lg mb-5 w-100" loading="lazy">

                        <div class="mb-5">
                            <h3 class="mb-3"><%= t('projDetailAbout') %></h3>
                            <p class="lead text-muted">
                                <%= project.description %>
                            </p>
                        </div>

                        <div class="row mb-5">
                            <div class="col-md-6">
                                <h4 class="mb-3"><%= t('projDetailTech') %></h4>
                                <ul class="list-group list-group-flush">
                                    <% project.technologies.forEach(function(tech) { %>
                                        <li class="list-group-item"><i class="fas fa-check text-primary me-2"></i>
                                            <%= tech %>
                                        </li>
                                        <% }); %>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h4 class="mb-3"><%= t('projDetailFeatures') %></h4>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><i class="fas fa-calendar text-primary me-2"></i> <%= t('projDetailDate') %>:
                                        <%= t('projDetailDateValue') %></li>
                                    <li class="list-group-item"><i class="fas fa-user text-primary me-2"></i> <%= t('projDetailRole') %>:
                                        <%= t('projDetailRoleValue') %></li>

                                    <% if (project.liveUrl) { %>
                                        <li class="list-group-item"><i class="fas fa-link text-primary me-2"></i> <a
                                                href="<%= project.liveUrl %>" target="_blank"
                                                class="text-decoration-none"><%= t('projDetailLive') %></a></li>
                                        <% } %>

                                            <% if (project.githubUrl) { %>
                                                <li class="list-group-item"><i
                                                        class="fab fa-github text-primary me-2"></i> <a
                                                        href="<%= project.githubUrl %>" target="_blank"
                                                        class="text-decoration-none"><%= t('projDetailGithub') %></a></li>
                                                <% } %>
                                </ul>
                            </div>
                        </div>

                        <div class="text-center">
                            <a href="/" class="btn btn-outline-primary btn-lg"><i
                                    class="fas fa-arrow-left me-2"></i><%= t('projDetailBack') %></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include('partials/footer') %>

</body>

</html>